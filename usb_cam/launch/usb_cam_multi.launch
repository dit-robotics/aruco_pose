<launch>
  <node ns="node1" name="usb_cam" pkg="usb_cam" type="usb_cam_node" output="screen" >
    <param name="video_device" value="/dev/video0" />
    <param name="image_width" value="1280" />
    <param name="image_height" value="720" />
    <param name="pixel_format" value="mjpeg" />
    <param name="camera_frame_id" value="usb_cam" />
    <param name="io_method" value="mmap"/>
    <param name="framerate" value="60" />
    <param name="camera_info_url" value="package://usb_cam/include/usb_cam/head_camera1.yaml" /> 
  </node>

  <node ns="node1" pkg="nodelet" type="nodelet" name="camera_nodelet_manager"  args="manager" />
  <node ns="node1" pkg="nodelet" type="nodelet" name="image_proc_fisheye" args="load image_proc_fisheye/RectifyNodelet camera_nodelet_manager" output="screen">
    <remap from="camera_info" to="/node1/usb_cam/camera_info" />
    <remap from="image_raw" to="/node1/usb_cam/image_raw" />
    <remap from="image_rect" to="/node1/usb_cam/image_rect" />
  </node>


  <node ns="node2" name="usb_cam" pkg="usb_cam" type="usb_cam_node" output="screen" >
    <param name="video_device" value="/dev/video2" />
    <param name="image_width" value="1280" />
    <param name="image_height" value="720" />
    <param name="pixel_format" value="mjpeg" />
    <param name="camera_frame_id" value="usb_cam" />
    <param name="io_method" value="mmap"/>
    <param name="framerate" value="60" />
    <param name="camera_info_url" value="package://usb_cam/include/usb_cam/head_camera2.yaml" />  
  </node>

  <node ns="node2" pkg="nodelet" type="nodelet" name="camera_nodelet_manager"  args="manager" />
  <node ns="node2" pkg="nodelet" type="nodelet" name="image_proc_fisheye" args="load image_proc_fisheye/RectifyNodelet camera_nodelet_manager" output="screen">
    <remap from="camera_info" to="/node2/usb_cam/camera_info" />
    <remap from="image_raw" to="/node2/usb_cam/image_raw" />
    <remap from="image_rect" to="/node2/usb_cam/image_rect" />
  </node>


</launch>
